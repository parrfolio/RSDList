{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    { "key": "X-Frame-Options", "value": "DENY" },
                    { "key": "X-Content-Type-Options", "value": "nosniff" },
                    { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
                    { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
                    { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
                    { "key": "X-XSS-Protection", "value": "1; mode=block" },
                    { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; font-src 'self'; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com https://*.cloudfunctions.net wss://*.firebaseio.com; frame-src 'self' https://*.firebaseapp.com; object-src 'none'; base-uri 'self'; form-action 'self';" }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "storage": {
            "port": 9199
        },
        "hosting": {
            "port": 5002
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    }
}