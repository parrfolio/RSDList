rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if caller is admin
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Admins collection: readable by authenticated, writable by no one (admin SDK only)
    match /admins/{email} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Events: readable by all, writable by admins
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Releases: readable by all, writable by admins
    match /releases/{releaseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: readable/writable by owner only
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      // Wants subcollection: readable/writable by owner only
      match /wants/{wantId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
